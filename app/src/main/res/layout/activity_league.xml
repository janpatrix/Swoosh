<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LeagueActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"/>
    <TextView
            android:text="DESIRED LEAGUE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textColor="@color/colorAccent"
            app:fontFamily="@font/montserrat" android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"/>
    <ImageView
            android:src="@drawable/swooshlogo"
            android:layout_width="88dp"
            android:layout_height="35dp"
            android:id="@+id/imageView4" android:scaleType="fitCenter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/imageView3" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView">
        <ToggleButton
                android:text="MENS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton7" android:textOff="MENS"
                android:textOn="MENS" tools:text="MENS" android:textColor="@color/colorAccent"
                app:fontFamily="@font/montserrat"
                android:background="@drawable/swoosh_toggle"/>
        <ToggleButton
                android:text="WOMENS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton5" android:textOff="WOMENS"
                tools:text="WOMENS" android:textOn="WOMENS" android:background="@drawable/swoosh_toggle"
                app:fontFamily="@font/montserrat"
                android:textColor="@color/colorAccent" android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"/>
        <ToggleButton
                android:text="CO-ED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton6" android:textOff="CO-ED"
                android:textOn="CO-ED" tools:text="CO-ED" android:background="@drawable/swoosh_toggle"
                app:fontFamily="@font/montserrat"
                android:textColor="@color/colorAccent"/>
    </LinearLayout>
    <Button
            android:text="NEXT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:fontFamily="@font/montserrat"
            android:layout_marginStart="8dp" android:background="@drawable/swoosh_button"
            android:textColor="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>