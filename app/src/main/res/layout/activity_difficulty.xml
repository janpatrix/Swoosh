<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LeagueActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/beginnerballerbg"
            android:id="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="DESIRED LEAGUE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textColor="@color/colorAccent"
            app:fontFamily="@font/montserrat" android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"/>
    <ImageView
            android:src="@drawable/swooshlogo"
            android:layout_width="88dp"
            android:layout_height="35dp"
            android:id="@+id/imageView4" android:scaleType="fitCenter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="FINISH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:fontFamily="@font/montserrat"
            android:layout_marginStart="8dp" android:background="@drawable/swoosh_button"
            android:textColor="@color/colorAccent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:padding="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">
        <ToggleButton
                android:text="Beginner"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:id="@+id/toggleButton7" android:textOff="Beginner"
                android:textOn="Beginner" tools:text="Beginner" android:textColor="@color/colorAccent"
                app:fontFamily="@font/montserrat"
                android:layout_marginRight="16dp"
                android:background="@drawable/swoosh_toggle" tools:layout_editor_absoluteY="464dp"
                tools:layout_editor_absoluteX="209dp"/>
        <ToggleButton
                android:text="Baller"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:id="@+id/toggleButton5" android:textOff="Baller"
                tools:text="Baller" android:textOn="Baller" android:background="@drawable/swoosh_toggle"
                android:layout_marginLeft="16dp"
                app:fontFamily="@font/montserrat"
                android:textColor="@color/colorAccent"
                tools:layout_editor_absoluteY="464dp" tools:layout_editor_absoluteX="62dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>